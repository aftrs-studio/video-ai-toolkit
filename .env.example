# Video AI Toolkit Environment Variables
# Copy this file to .env and fill in your values

# HuggingFace API Token (required for model download)
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxx

# Model cache location (optional)
# Default: ~/.cache/vidtool
VIDTOOL_MODEL_PATH=

# Device to use for inference (optional)
# Options: cuda, cpu
# Default: cuda (auto-falls back to cpu if no GPU)
VIDTOOL_DEVICE=cuda

# Default output directory (optional)
# Default: ./output
VIDTOOL_OUTPUT_DIR=
